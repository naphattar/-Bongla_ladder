<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="backgroundpane" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.startScreenController">
   <children>
      <Canvas fx:id="backgroundCanvas" height="720.0" width="720.0" />
      <Text layoutX="190.0" layoutY="62.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Bongla Ladder">
         <font>
            <Font name="Book Antiqua" size="52.0" />
         </font>
      </Text>
      <Button fx:id="playButton" layoutX="300.0" layoutY="456.0" mnemonicParsing="false" onAction="#startGame" prefWidth="120.0" text="Play">
         <font>
            <Font name="Poor Richard" size="22.0" />
         </font>
      </Button>
      <Button fx:id="infoButton" layoutX="294.0" layoutY="511.0" mnemonicParsing="false" onAction="#infoShow" prefHeight="40.0" prefWidth="132.0" text="How to play">
         <font>
            <Font name="Poor Richard" size="22.0" />
         </font>
      </Button>
      <Button fx:id="exitButton" layoutX="300.0" layoutY="570.0" mnemonicParsing="false" onAction="#exitGame" prefWidth="120.0" text="Exit">
         <font>
            <Font name="Poor Richard" size="22.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
